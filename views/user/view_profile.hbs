<div class="well">
    <div class="row">
        <div class="col-md-3">
            <div class="profile-userpic">
                <img src="/../uploads/{{user.picture}}" class="img-responsive" alt="">
            </div>
        </div>

        <div class="col-md-7">
            <h3>{{ userData.fullName }}</h3>
            <h6>Email: {{ userData.email }}</h6>
        </div>

        <div class="col-md-2">
            <div class="btn-group">
                <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                    Action
                    <span class="icon-cog icon-white"></span><span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="/user/edit_profile/{{userData.id}}"><span class="icon-wrench"></span> Modify</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

