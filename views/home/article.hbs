        {{#each recipes}}
            <div class="col-md-6">
                <recipe>
                    <header>
                        <h2>{{ this.title }}</h2>
                    </header>
                    <p>
                        {{ this.content }}
                    </p>
                    <small class="author">
                        {{ this.author.fullName }}
                    </small>
                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs"
                               href="/recipe/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </recipe>
            </div>
        {{/each}}
