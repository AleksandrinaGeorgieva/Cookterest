<div class="col-md-9">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/recipe/delete/{{id}}">
            <fieldset>
                <legend>Delete Recipe</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeTitle">Recipe Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="recipeTitle" placeholder="Recipe Title" value="{{title}}" name="title" disabled>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="recipeContent" rows="5" name="content"
                                  disabled>{{content}}
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeIngredients">Ingredients</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="recipeIngredients" rows="5" name="ingredients" disabled>
                            {{ingredients}}
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeDirections">Directions</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="recipeDirections" rows="5" name="directions" disabled>
                            {{directions}}
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipePrepTime">Preparation time</label>
                    <div class="col-sm-6">
                        <input type="number" name="prepTime" min="1" max="200" disabled value="{{prepTime}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="recipeCookTime">Cooking time</label>
                    <div class="col-sm-6">
                        <input type="number" name="cookTime" min="1" max="200" disabled value="{{cookTime}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label"
                           for="recipeContent">Category</label>
                    <div class="col-sm-6">
                        <select name="category" class="form-control" id="select"
                                disabled>
                            <option
                                    value="{{category.id}}">{{category.name}}</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/" class="btn btn-default">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

